<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/sign_in_button_background"
    android:backgroundTint="@color/sign_in_button_background_google"
    android:foreground="@drawable/sign_in_button_ripple"
    android:padding="@dimen/sign_in_button_padding">

    <ImageView
        android:id="@+id/button_logo"
        android:layout_width="@dimen/sign_in_button_image_size"
        android:layout_height="@dimen/sign_in_button_image_size"
        android:scaleType="fitXY"
        android:src="@drawable/sign_in_button_google_icon"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:alpha="0.54"
        android:text="Sign in with Google"
        android:textColor="@android:color/black"
        android:textSize="@dimen/sign_in_button_text_size"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/button_logo"
        app:layout_constraintTop_toTopOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>